{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "removeComments": false,
    "rootDir": "src"
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}
